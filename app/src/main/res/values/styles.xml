<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/roboto</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">true</item>

        <item name="cardViewStyle">@style/CardView</item>
    </style>
    <style name="CustomAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="color">@android:color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>
    </style>
    <!--use item name="drawerArrowStyle" if you are using dark primaryColor in your app, else remove it-->
    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:hint">@color/colorAccent</item>
        <item name="android:textAppearance">@style/ToolbarTextAppearance</item>
    </style>

    <style name="ToolbarTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="NavigationTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="BigText">
        <item name="android:textSize">@dimen/text_18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NormalText">
        <item name="android:paddingTop">@dimen/padding_16</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>



    <dimen name="text_28sp">28sp</dimen>
    <dimen name="text_14sp">14sp</dimen>

    <style name="StyledButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/colorPrimaryDark</item>
        <item name="android:background">@drawable/bg_round</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="StyledEditText">
        <item name="android:padding">@dimen/padding_16</item>
        <item name="android:layout_height">@dimen/height_edit_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:layout_marginBottom">@dimen/margin_8</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/blueLight</item>
        <item name="android:background">@drawable/bg_edittext</item>
    </style>
    <style name="StyledTextView">
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
        <item name="android:padding">@dimen/padding_8</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_23sp</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>
    // styles.xml
    <style name="customRatingBar"
        parent="android:style/Widget.Material.RatingBar.Small">
        ... // Additional customizations
    </style>
</resources>
