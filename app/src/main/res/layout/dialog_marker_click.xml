<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_16"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_round_15dp_white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="@dimen/margin_12"
            android:id = "@+id/tvName"
            android:textColor="@color/darkGray"
            android:textSize="@dimen/text_18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Томми"
            />
        <TextView
            android:layout_marginTop="@dimen/margin_12"
            android:textStyle="bold"
            android:textSize="@dimen/text_18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = " - "
            />
        <TextView
            android:id="@+id/tvType"
            android:layout_marginTop="@dimen/margin_12"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold|italic"
            android:textSize="@dimen/text_18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Водитель"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/margin_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/gray_solid"
            android:textSize="@dimen/text_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "@string/time"
            />
        <TextView
            android:textColor="@color/gray_solid"
            android:textSize="@dimen/text_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = " - "
            />
        <TextView
            android:id="@+id/tvTime"
            android:textColor="@color/darkGray"
            android:textSize="@dimen/text_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "03.04.2018| 07.30"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/margin_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/gray_solid"
            android:textSize="@dimen/text_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "@string/from"
            />
        <TextView
            android:textColor="@color/gray_solid"
            android:textSize="@dimen/text_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = " - "
            />
        <TextView
            android:textColor="@color/darkGray"
            android:id="@+id/tvFrom"
            android:textSize="@dimen/text_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "пр.Чынгыза Айтматова,35"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/margin_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/gray_solid"
            android:textSize="@dimen/text_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "@string/to"
            />
        <TextView
            android:textColor="@color/gray_solid"
            android:textSize="@dimen/text_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = " - "
            />
        <TextView
            android:id="@+id/tvTo"
            android:textColor="@color/darkGray"
            android:textSize="@dimen/text_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "AUCA"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btnShowPath"
        android:textColor="@color/white"
        android:text="@string/show_path"
        android:layout_margin="16dp"
        android:background="@drawable/bg_round_15"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnDeal"
            android:text="@string/btnDeal"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="@dimen/margin_16"
            android:layout_weight="2"
            android:textSize="12dp"
            android:background="@drawable/bg_round_15"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="@dimen/margin_16" />

        <Button
            android:id="@+id/btnCall"
            android:text="@string/btnCall"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="@dimen/margin_16"
            android:layout_weight="1"
            android:background="@drawable/bg_round_15"
            android:layout_marginEnd="@dimen/margin_16" />

    </LinearLayout>



</LinearLayout>