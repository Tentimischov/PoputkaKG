<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:padding="@dimen/padding_8">

        <ImageView
            android:id="@+id/imgArrow"
            android:layout_width="55dp"
            android:layout_height="46dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_arrow_back" />

        <ImageView
            android:layout_width="83dp"
            android:layout_height="69dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_logo_white_round" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProfile"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="17dp"
            android:src="@drawable/ic_logo" />
    </RelativeLayout>

    <TextView
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_18sp"
        android:textStyle="bold"
        android:text="@string/suggestion"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="@dimen/margin_16"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvCommon"
        android:gravity="center_horizontal"
        android:text="@string/common"
        android:textSize="@dimen/text_18sp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
        <View
            android:background="@color/gray"
            android:layout_width="2dp"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/tvMy"
            android:gravity="center_horizontal"
            android:text="@string/my"
            android:textSize="@dimen/text_18sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/recyclerView"
        android:layout_gravity="center_horizontal"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        tools:listitem ="@layout/item_suggestion"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/margin_12"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/outgoingPart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="@dimen/margin_16"
            android:textSize="@dimen/text_18sp"
            android:layout_marginLeft="@dimen/margin_16"
            android:text="@string/outgoing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/outgoingRecycler"
                android:layout_gravity="center_horizontal"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                tools:listitem ="@layout/item_suggestion"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/margin_12"
                android:layout_height="wrap_content"/>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/incomingPart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="@dimen/margin_16"
            android:textSize="@dimen/text_18sp"
            android:layout_marginLeft="@dimen/margin_16"
            android:text="@string/incoming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/incomingRecycler"
                android:layout_gravity="center_horizontal"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                tools:listitem ="@layout/item_suggestion"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/margin_12"
                android:layout_height="wrap_content"/>
        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

</LinearLayout>



