<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.login.LoginActivity">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_32">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_margin="64dp"
                android:src="@drawable/ic_logo" />

            <EditText
                android:inputType="number"
                android:maxLength="9"
                android:id="@+id/etPhoneLogin"
                style="@style/StyledEditText"
                android:hint="@string/type_phone_number" />

            <EditText
                android:inputType="textPassword"
                android:id="@+id/etPassWordLogin"
                style="@style/StyledEditText"
                android:hint="@string/type_password"/>


            <Button
                android:id="@+id/btnEnterLogin"
                style="@style/StyledButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_8"
                android:text="@string/enter_login" />
<!--
            <TextView
                android:id="@+id/tvForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_32"
                android:layout_marginTop="@dimen/margin_32"
                android:text="@string/forgot_password"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_18sp"
                android:textStyle="bold" />-->

            <Button
                android:id="@+id/btnGoToSignUp"
                android:layout_marginTop="@dimen/margin_16"
                android:text="@string/signing_up"
                style="@style/StyledButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>