<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.checksms.CheckSmsCodeActivity">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:padding="@dimen/margin_32">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_32"
            android:src="@drawable/ic_logo" />

        <TextView
            style="@style/StyledTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/checking_sms" />

        <EditText
            android:id="@+id/etCheckSms"
            style="@style/StyledEditText"
            android:inputType="number"
            android:maxLines="1" />

        <Button
            android:id="@+id/btnCheckSms"
            style="@style/StyledButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:text="@string/check_sms" />

    </LinearLayout>


</LinearLayout>