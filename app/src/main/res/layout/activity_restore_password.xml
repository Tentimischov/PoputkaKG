<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_32">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_32"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_logo" />
            <TextView
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textSize="@dimen/margin_32"
                android:text="@string/restore_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textSize="@dimen/margin_32"
                android:text="@string/restore_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="64dp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:text="@string/restore_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                style="@style/StyledEditText"
                android:hint="@string/type_phone_number"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <Button
                android:text="@string/send_code"
                android:textColor="@color/white"
                style="@style/StyledButton"
                android:layout_marginTop="60dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </ScrollView>

</FrameLayout>