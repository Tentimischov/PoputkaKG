<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:paddingLeft="10dp">
    <ImageView
        android:layout_marginTop="@dimen/margin_32"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_logo_white_round" />
    <RelativeLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="@dimen/margin_8"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_marginRight="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_16"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfileHeaderImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignTop="@+id/tvUserName"
            android:src="@drawable/profile_user"
            android:layout_alignParentLeft="true" />
        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivProfileHeaderImage"
            android:paddingLeft="@dimen/padding_16"
            android:paddingTop="@dimen/padding_4"
            android:text="Томми Вайсо"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/ivProfileHeaderImage" />

        <TextView
            android:id="@+id/tvUserStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvUserName"
            android:layout_toEndOf="@+id/ivProfileHeaderImage"
            android:paddingLeft="@dimen/padding_16"
            android:text="Водитель/Пассажир"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14sp"
            android:layout_toRightOf="@+id/ivProfileHeaderImage" />
    </RelativeLayout>

</LinearLayout>